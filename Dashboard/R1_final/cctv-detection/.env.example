# =====================================================
# YOLO DETECTION API ENVIRONMENT VARIABLES
# =====================================================

# Flask Server Configuration
FLASK_ENV=development
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# Backend API Configuration
BACKEND_API_URL=http://localhost:3001/api

# YOLO Model Configuration
YOLO_MODEL_PATH=yolov8n.pt
# Options: yolov8n.pt (fastest), yolov8s.pt, yolov8m.pt, yolov8l.pt, yolov8x.pt (most accurate)

CONFIDENCE_THRESHOLD=0.5
# Minimum confidence for detections (0.0 to 1.0)

# Storage Configuration
SCREENSHOTS_DIR=./screenshots
MAX_SCREENSHOT_AGE_DAYS=30

# Supabase (for direct database access if needed)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Performance Configuration
MAX_PARALLEL_STREAMS=10
DETECTION_FPS=30
